<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="vertical"
    android:layout_width="match_parent">
    <LinearLayout
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".element.product.About_product_activity">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/about_product_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="enterAlways|scroll">
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <android.support.v7.widget.CardView
            app:elevation="3dp"
            android:layout_margin="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="1dp"
                android:background="@android:color/white">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/about_product_image_view"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/product"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="3dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:id="@+id/product_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Colgate"
                android:id="@+id/about_product_name"
                android:layout_marginStart="30dp"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_medium"
                android:textAllCaps="true"
                android:paddingTop="16dp"
                android:layout_gravity="left" />
            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/seprator"
                android:layout_height="3dp">
            </View>
            <android.support.v7.widget.CardView
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/about_product_brand_label"
                        android:text="Brand"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/about_product_brand"
                        android:text="Nesle "
                        android:layout_below="@id/about_product_brand_label"
                        android:textSize="@dimen/text_size_medium"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_alignParentStart="true" />
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_info_outline_black_24dp"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/about_product_brand_anchor"
                        android:layout_alignTop="@+id/about_product_brand_label"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp">
                <RelativeLayout
                    android:layout_marginStart="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/about_product_category_label"
                        android:text="Category"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/about_product_category"
                        android:text="Food item,household..."
                        android:layout_below="@id/about_product_category_label"
                        android:textSize="@dimen/text_size_medium"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_alignParentStart="true" />
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/about_product_category_anchor"
                        android:layout_alignTop="@id/about_product_category_label"
                        android:layout_alignParentEnd="true" />
                    <android.support.v7.widget.RecyclerView
                        android:layout_below="@+id/about_product_category"
                        android:id="@+id/about_product_category_recycle_view"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                >
                <RelativeLayout
                    android:layout_marginStart="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/about_product_retailer_label"
                        android:text="Retailer"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/about_product_retailer"
                        android:text="bla,wozil,smith,arun..."
                        android:layout_below="@id/about_product_retailer_label"
                        android:textSize="@dimen/text_size_medium"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_alignParentStart="true" />
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/about_product_retailer_anchor"
                        android:layout_alignTop="@+id/about_product_retailer_label"
                        android:layout_alignParentEnd="true" />
                    <android.support.v7.widget.RecyclerView
                        android:layout_below="@+id/about_product_retailer"
                        android:id="@+id/about_product_retailer_recycle_view"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <RelativeLayout
                    android:layout_marginStart="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/about_product_price_label"
                        android:text="Price"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/about_product_price"
                        android:text="Price"
                        android:layout_below="@id/about_product_price_label"
                        android:textSize="@dimen/text_size_medium"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp">
                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/about_product_details_label"
                        android:textStyle="bold"
                        android:text="Details"
                        android:textSize="@dimen/text_size_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/about_product_details"
                        android:text="mdfkdf dfkjdfkjdf fdjdfkjfjkfdkjdf dfkjdfkjdf dfkdfkjdf dfkjfdkjfd dfjkfdkjdf fdkjdfkjfd fddfkjdfkjdf fddfkdf fdjkdfjdfkjf dfkjdfjdfkjdf dfjkdfjkdf dfkjfdkjfd"
                        android:layout_below="@id/about_product_details_label"
                        android:textSize="@dimen/text_size_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <ProgressBar
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_progress_bar" />
    </LinearLayout>
</ScrollView>


