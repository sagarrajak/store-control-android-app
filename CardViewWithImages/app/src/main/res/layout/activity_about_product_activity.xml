<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="vertical"
    android:layout_width="match_parent">
    <LinearLayout
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".intent.product.About_product_activity">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/about_product_toolbar"
                layout="@layout/toolbar">
            </include>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:elevation="2dp"
            android:layout_margin="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="1dp"
                android:background="@android:color/white">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/about_product_image_view"
                    android:src="@drawable/product"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:id="@+id/product_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Colgate"
                android:id="@+id/about_product_name"
                android:paddingLeft="16dp"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_medium"
                android:textAllCaps="true"
                android:paddingTop="16dp"
                android:layout_gravity="left" />
            <View
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/seprator"
                android:layout_height="3dp">
            </View>
            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_margin="3dp"
                android:elevation="2dp"
                app:cardCornerRadius="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="35dp"
                    android:weightSum="1">
                    <TextView
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/about_product_brand"
                        android:text="Nesle"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_medium_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                    <ImageView
                        android:id="@+id/about_product_brand_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_icon_right" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_margin="2dp"
                android:elevation="2dp"
                app:cardCornerRadius="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Category :"
                        android:textSize="@dimen/text_size_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                    <TextView
                        android:padding="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:maxLines="100"
                        android:scrollbars="vertical"
                        android:layout_width="wrap_content"
                        android:id="@+id/about_product_category"
                        android:text="Glossaries"
                        android:textSize="@dimen/text_size_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:elevation="2dp"
                app:cardCornerRadius="2dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Retailer :"
                        android:textSize="@dimen/text_size_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                    <TextView
                        android:id="@+id/about_product_retailer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="5dp"
                        android:maxLines="100"
                        android:padding="1dp"
                        android:scrollbars="vertical"
                        android:text="Blablablo,"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="2dp"
                app:cardCornerRadius="2dp"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Price :"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_medium_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="6dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_width="wrap_content"
                        android:text="200 rupees"
                        android:id="@+id/about_product_price"
                        android:textSize="@dimen/text_size_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:elevation="2dp"
                app:cardCornerRadius="2dp"
                android:layout_margin="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Details :"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_medium_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/about_product_details"
                        android:text=" jdjhdkjdf djkfdkjdf fdjkfdkjfd dfkjdfkjfd fdkjfdkjfd dkjfdkj"
                        android:textSize="@dimen/text_size_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_weight="0.61" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <ProgressBar
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_progress_bar"
            />

    </LinearLayout>



</ScrollView>


