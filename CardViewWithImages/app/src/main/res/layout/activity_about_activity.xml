<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary" tools:context=".intent.employee.About_employee_activity"
    android:weightSum="1">
    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
       <include layout="@layout/toolbar" android:id="@+id/about_employee_toolbar"></include>
    </android.support.design.widget.AppBarLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="1dp"
        android:src="@drawable/employee"
        android:background="@android:color/white"
        android:id="@+id/about_employee_image"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="1dp"
        android:adjustViewBounds="false" />
    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="4dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sumit kumar"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/about_employee_name"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="sumitkumar@gmail.com"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:textStyle="normal"
            android:textSize="18sp"
            android:id="@+id/about_employee_mail">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ABC profile"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:textStyle="normal"
            android:textSize="18sp"
            android:id="@+id/about_employee_work_profile">
        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="7750811799"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:textStyle="normal"
            android:textSize="18sp"
            android:id="@+id/about_employee_phone_num">
        </TextView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Pan num :"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:textStyle="normal"
                android:textSize="18sp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="77ME5024"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:textStyle="normal"
                android:id="@+id/about_employee_pan_num"
                android:textSize="18sp">
            </TextView>
        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Date of join:"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:textStyle="normal"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="15 DEC 2015"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:id="@+id/about_employee_date_of_join"
            android:textStyle="normal"
            android:textSize="18sp">
        </TextView>
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Date of birth:"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:textStyle="normal"
                android:textSize="18sp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="15 DEC 2015"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:id="@+id/about_employee_date_of_birth"
                android:textStyle="normal"
                android:textSize="18sp">
            </TextView>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
