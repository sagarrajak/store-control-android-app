<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@android:color/black"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:clickable="true"
        app:elevation="2dp"
        app:cardCornerRadius="3dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/setting_product_category"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:layout_height="50dp">
            <TextView
                android:text="Product Category"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true" />
            <ImageView
                android:src="@drawable/ic_icon_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:id="@+id/setting_product_category_imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:elevation="2dp"
        app:cardCornerRadius="1dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/setting_work_profile"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <TextView
                android:text="Work profile"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />
            <ImageView
                android:src="@drawable/ic_icon_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="13dp"
                android:id="@+id/setting_work_profile_imageView" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:elevation="2dp"
        app:cardCornerRadius="1dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/setting_stock"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <TextView
                android:text="Stock"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true" />
            <ImageView
                android:src="@drawable/ic_icon_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="13dp"
                android:id="@+id/setting_stock_imageView" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:elevation="2dp"
        app:cardCornerRadius="1dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/setting_manage_right"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <TextView
                android:text="Manage right"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />
            <ImageView
                android:src="@drawable/ic_icon_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="13dp"
                android:id="@+id/setting_manage_right_imageView" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:elevation="2dp"
        app:cardCornerRadius="1dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/setting_employee"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <TextView
                android:text="Employee"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true" />
            <ImageView
                android:src="@drawable/ic_icon_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="13dp"
                android:id="@+id/setting_employee_imageView" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:elevation="2dp"
        app:cardCornerRadius="1dp"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/setting_product"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <TextView
                android:text="Product"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true" />
            <ImageView
                android:src="@drawable/ic_icon_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="13dp"
                android:id="@+id/setting_product_imageView" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>