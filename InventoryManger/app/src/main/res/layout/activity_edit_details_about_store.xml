<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.sagar.myapplication.element.about_store.Edit_about_store_activity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/edit_store_coordinatorlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/about_store_edit_activity2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/edit_store_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical"
            android:layout_marginBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/edit_about_store_picture_anchor" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="5dp"
                    android:src="@drawable/ic_person_black_24dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <EditText
                    android:layout_marginStart="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:id="@+id/edit_store_name"
                    android:hint="Name" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_call_black_24dp"
                    android:id="@+id/edit_store_call_icon" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_store_phone_num"
                    android:hint="Phone number"
                    android:layout_marginStart="50dp"
                    android:inputType="phone" />

                <Spinner
                    android:layout_below="@id/edit_store_phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_store_phone_num_spinner"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="50dp"></Spinner>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_mail_black_24dp" />

                <EditText
                    android:id="@+id/edit_store_email_address"
                    android:hint="Email"
                    android:layout_marginStart="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />

                <Spinner
                    android:layout_below="@id/edit_store_email_address"
                    android:id="@+id/edit_store_email_spinner"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_height="match_parent"></Spinner>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_home_black_24dp"
                    android:id="@+id/edit_store_address_icon" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/edit_store_address_view_anchor"
                    android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/edit_store_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_alignParentStart="true"
                    android:hint="Address"
                    android:layout_toStartOf="@+id/edit_store_address_view_anchor" />>

                <EditText
                    android:layout_below="@+id/edit_store_address"
                    android:layout_marginStart="50dp"
                    android:id="@+id/edit_store_street"
                    android:hint="Street"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <EditText
                    android:layout_marginStart="50dp"
                    android:hint="Post office"
                    android:layout_below="@id/edit_store_street"
                    android:id="@+id/edit_store_post_office"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <EditText
                    android:layout_marginStart="50dp"
                    android:layout_below="@id/edit_store_post_office"
                    android:id="@+id/edit_store_neighbourhood"
                    android:hint="Neighbourhood"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/edit_store_city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/edit_store_neighbourhood"
                    android:layout_marginStart="50dp"
                    android:hint="City" />

                <EditText
                    android:id="@+id/edit_store_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/edit_store_city"
                    android:layout_marginStart="50dp"
                    android:hint="State" />

                <EditText
                    android:id="@+id/edit_store_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/edit_store_state"
                    android:layout_marginStart="50dp"
                    android:hint="Zipcode" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="5dp"
                    android:src="@drawable/ic_description_black_24dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <EditText
                    android:layout_marginStart="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:id="@+id/about_Store_details"
                    android:hint="Details" />
            </RelativeLayout>
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="50dp"
            android:id="@+id/edit_store_floating_action_bottom"
            android:clickable="true"
            android:src="@android:drawable/ic_menu_camera"
            app:layout_anchor="@id/edit_about_store_picture_anchor"
            app:layout_anchorGravity="right|bottom" />
    </android.support.design.widget.CoordinatorLayout>
</ScrollView>
