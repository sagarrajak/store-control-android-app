<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sagar.myapplication.element.retailer.Edit_retailer_activity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/activity_create_employee_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="enterAlways|scroll"
                android:id="@+id/edit_retailer_toolbar"></android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="?actionBarSize"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/edit_retailer_picture"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/employee"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="3dp" />

                <ImageView
                    android:id="@+id/edit_retailer_picture_anchor"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="130dp"
                    android:layout_height="100dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:padding="5dp"
                    android:id="@+id/person_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_person_black_24dp" />

                <EditText
                    android:id="@+id/edit_retailer_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="50dp"
                    android:hint="Name" />

                <EditText
                    android:id="@+id/edit_retailer_middle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/edit_retailer_first_name"
                    android:layout_marginStart="50dp"
                    android:hint="Middle name" />

                <EditText
                    android:id="@+id/edit_retailer_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/edit_retailer_middle_name"
                    android:layout_marginStart="50dp"
                    android:hint="Last name" />

                <EditText
                    android:id="@+id/edit_retailer_family_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/edit_retailer_last_name"
                    android:layout_marginStart="50dp"
                    android:hint="Family name" />

                <EditText
                    android:id="@+id/edit_retailer_suffix_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/edit_retailer_family_name"
                    android:layout_marginStart="50dp"
                    android:hint="Suffix" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <ImageView
                    android:padding="5dp"
                    android:id="@+id/edit_retailer_mail_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/ic_mail_black_24dp" />

                <EditText
                    android:id="@+id/edit_retailer_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:hint="Email" />

                <Spinner
                    android:id="@+id/edit_retailer_mail_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/edit_retailer_mail"
                    android:layout_marginStart="50dp"
                    android:spinnerMode="dropdown" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <ImageView
                    android:padding="4dp"
                    android:id="@+id/edit_retailer_phon_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/ic_call_black_24dp" />

                <EditText
                    android:id="@+id/edit_retailer_phon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:hint="Phone number" />

                <Spinner
                    android:id="@+id/edit_retailer_phon_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp"
                    android:layout_below="@id/edit_retailer_phon"
                    android:layout_alignParentStart="true"
                    android:spinnerMode="dropdown" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:padding="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_home_black_24dp" />

                <EditText
                    android:id="@+id/edit_retailer_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="50dp"
                    android:hint="Address" />

                <EditText
                    android:id="@+id/edit_retailer_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="50dp"
                    android:layout_below="@+id/edit_retailer_address"
                    android:hint="Street" />

                <EditText
                    android:id="@+id/edit_retailer_post_office"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="50dp"
                    android:layout_below="@+id/edit_retailer_street"
                    android:hint="Post office" />

                <EditText
                    android:id="@+id/edit_retailer_neighborhood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="50dp"
                    android:layout_below="@+id/edit_retailer_post_office"
                    android:hint="Neighborhood" />

                <EditText
                    android:id="@+id/edit_retailer_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="50dp"
                    android:inputType="number"
                    android:layout_below="@+id/edit_retailer_neighborhood"
                    android:hint="City" />

                <EditText
                    android:id="@+id/edit_retailer_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="50dp"
                    android:inputType="number"
                    android:layout_below="@+id/edit_retailer_city"
                    android:hint="State" />

                <EditText
                    android:id="@+id/edit_retailer_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="50dp"
                    android:inputType="number"
                    android:layout_below="@+id/edit_retailer_state"
                    android:hint="Zipcode" />
            </RelativeLayout>
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/edit_retailer_floating_action_bottom"
            android:clickable="true"
            android:src="@drawable/ic_edit_white_24dp"
            app:layout_anchor="@id/edit_retailer_picture_anchor"
            app:layout_anchorGravity="right|center" />
    </android.support.design.widget.CoordinatorLayout>
</ScrollView>
